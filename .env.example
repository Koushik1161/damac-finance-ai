# DAMAC Finance AI - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM CONFIGURATION (Required)
# =============================================================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Model names (gpt-4o-mini recommended for cost efficiency)
OPENAI_MODEL_ORCHESTRATOR=gpt-4o-mini
OPENAI_MODEL_AGENTS=gpt-4o-mini

# =============================================================================
# AZURE OPENAI (Alternative to OpenAI)
# =============================================================================

# Uncomment to use Azure OpenAI instead
# AZURE_OPENAI_API_KEY=your_azure_openai_key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT_ID=your-deployment-name

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
APP_ENV=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# DATABASE (Optional - for production)
# =============================================================================

# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/damac_finance

# =============================================================================
# OBSERVABILITY (Optional)
# =============================================================================

# Langfuse for LLM tracing
# LANGFUSE_PUBLIC_KEY=your_public_key
# LANGFUSE_SECRET_KEY=your_secret_key
# LANGFUSE_HOST=https://cloud.langfuse.com

# Azure Monitor
# AZURE_MONITOR_INSTRUMENTATION_KEY=your_app_insights_key
